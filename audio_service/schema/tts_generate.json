{
  "type": "object",
  "properties": {
    "task_id": {
      "type": "string",
      "description": "Unique identifier for the task."
    },
    "job_id": {
      "type": "string",
      "description": "Unique identifier for the job."
    },
    "book_title": {
      "type": "string",
      "description": "Title of the book."
    },
    "selected_title": {
      "type": "string",
      "description": "Title of the selected section."
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Heading": {
            "type": "string",
            "description": "Heading of the section."
          },
          "Content": {
            "type": ["string", "array"],
            "description": "Content of the section, can be a string or a list."
          },
          "Subsections": {
            "type": "array",
            "items": {
              "$ref": "#/properties/sections/items"
            },
            "description": "List of subsections."
          }
        },
        "required": ["Heading", "Content"]
      },
      "description": "List of sections and their content."
    },
    "language": {
      "type": "string",
      "description": "Language of the content."
    },
    "speaker": {
      "type": "string",
      "description": "Speaker identifier."
    },
    "speaker_type": {
      "type": "string",
      "enum": ["Studio", "Custom"],
      "description": "Type of speaker (e.g., Studio or Custom)."
    },
    "output_format": {
      "type": "string",
      "enum": ["mp3", "wav", "ogg"],
      "description": "Desired audio format."
    },
    "status": {
      "type": "string",
      "description": "Status of the task."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of the task creation."
    },
    "priority": {
      "type": "string",
      "enum": ["low", "normal", "high"],
      "description": "Priority level of the task."
    }
  },
  "required": [
    "task_id",
    "job_id",
    "book_title",
    "selected_title",
    "sections",
    "language",
    "speaker",
    "speaker_type",
    "output_format",
    "status",
    "timestamp",
    "priority"
  ]
}
